{
    "manifest_version": 3,
    "name": "Music Controller",
    "version": "1.0",
    "description": "Control and seek music playing in any Chrome tab from a popup.",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }